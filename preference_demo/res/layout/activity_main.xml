<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.preference_demo.MainActivity" >

    <Button
        android:id="@+id/preditor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="pre editon的使用" />

    <Button
        android:id="@+id/prebase_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/preditor_button"
        android:layout_below="@+id/preditor_button"
        android:layout_marginTop="16dp"
        android:text="preference布局基础" />

    <Button
        android:id="@+id/wcsetting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prebase_button"
        android:layout_below="@+id/prebase_button"
        android:layout_marginTop="22dp"
        android:text="仿微信设置" />

    <Button
        android:id="@+id/hander_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/wcsetting_button"
        android:layout_below="@+id/wcsetting_button"
        android:layout_marginTop="35dp"
        android:text="hander使用" />

</RelativeLayout>