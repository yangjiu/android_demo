<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/wechat_usename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/wechat_imageview"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/wechat_imageview"
        android:text="健强"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/wechat_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        
        android:src="@drawable/userhead" />

    <TextView
        android:id="@+id/wechat_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wechat_imageview"
        android:layout_alignLeft="@+id/wechat_usename"
        android:text="晚安！"
        android:textColor="@color/color_unchecked_text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/wechat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/wechat_usename"
        android:layout_marginRight="16dp"
        android:text="Small Text"
        android:paddingBottom="40dp"
        android:textColor="@color/color_unchecked_text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
